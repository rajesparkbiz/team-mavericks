                        aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h1 class="modal-title fs-5" id="exampleModalLabel">Do You Want to Edit ?</h1>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <input type="text" class="addinput form-control" id="modal_category_name" class="form-control"
                                placeholder="Category name" oninput="checkCategory()" />

                              <label id="error_message2" class="erro_mssg2"></label>
                            </div>
                            <div class="modal-footer">
                              <input type="button" class="btn btn-secondary" data-bs-dismiss="modal" value="Cancel">
                              <input type="submit" class="btn btn-primary" id="saveChanges" value="Save Changes">
                            </div>
                          </div>
                        </div>
                      </div>

                      <!-- Delete Modal -->
                      <div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure you want to delete category ?</h1>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-danger" id="deleteCategory">Delete Category</button>
                            </div>
                          </div>
                        </div>
                      </div>

                      <% } %>

                  </div>
                </form>


              </div>


            </div>

          </div>
        </div>
      </div>
  </div>
  </section>

</body>


