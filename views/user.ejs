<body onload="navbar_changer('Students');">
  <%- include('navbar.ejs') %>
    <section class="app-wrapper">
      <div class="contaner-fluid">
        <div class="action-btn">
          <div class="search-input d-flex justify-content-center">
            <label for="exam-search-label">Search</label>
            <input type="text" id="search" class="form-control" oninput="Search(this.value)">
          </div>
        </div>

        <div class="user-table warpper m-2">
          <table class="table table-bordered table-hover table-sm" id="studenttable" border="1">
            <thead>
              <tr>
                <th>No</th>
                <th scope="col">Fname</th>
                <th scope="col">Lname</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Enrollment</th>
                <th scope="col">Qualification</th>
                <th scope="col">City</th>
                <th scope="col">Collage</th>
                <th scope="col">BirthDate</th>
                <th scope="col">CreateDate</th>
              </tr>
            </thead>

            <tbody id="table">

              <% for(i=0; i<data.length; i++) {%>
                <tr>
                  <% if(data[i]) { %>
                    <td>
                      <%= data[i].student_id %>
                    </td>
                    <td>
                      <%= data[i].fname%>
                    </td>
                    <td>
                      <%= data[i].lname%>
                    </td>
                    <td>
                      <%= data[i].gender%>
                    </td>
                    <td>
                      <%= data[i].email%>
                    </td>
                    <td>
                      <%= data[i].mobile%>
                    </td>
                    <td>
                      <%= data[i].enrollment%>
                    </td>
                    <td>
                      <%= data[i].qualification%>
                    </td>
                    <td>
                      <%= data[i].city%>
                    </td>
                    <td>
                      <%= data[i].college%>
                    </td>
                    <td>
                      <%= data[i].birthdate%>
                    </td>
                    <td class="student-date">
                      <%= data[i].createdate%>
                    </td>
                    <% } %>
                </tr>
                <% }%>
            </tbody>


          </table>
        </div>

        <div class="user-exam-pagination-bar w- d-flex justify-content-between mx-2">

          <nav aria-label="Page navigation example">
            <ul class="pagination" id="pagination-control">
              <li class="page-item <%if(page==1){%>disabled<%}%>">
                <input type="button"class="page-link" value="Previous" onclick="studentID('/students/data?page=<%= prev%>&column_name=<%= column_name %>&&AJAX=true')">
              </li>
              <% for(let i=1; i<=count; i++){ %>

                <li class="page-item" id="list<%= i %>">
                  <p class="page-link"
                    onclick="studentID(`/students/data?page=<%= i%>&column_name=<%= column_name %>&&AJAX=true`)">
                    <%= i %>
                  </p>
                </li>

                <% } %>
                  <li class="page-item">

                    <input type="button"class="page-link <%if(nextpage==page){%>disabled<%}%>" value="Next" onclick="studentID('/students/data?page=<%= nextpage%>&column_name=<%= column_name %>&&AJAX=true')">
                  </li>
            </ul>
          </nav>
        </div>

      </div>
    </section>
    <%- include('footer.ejs') %>

</body>



