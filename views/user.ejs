  async function Search(str) {


    var searching = document.getElementById("search").value;
    var res = await fetch(`/students/student-filter/?search=${str}`);
    var data = await res.json();
    var value = data.searchStudent;
    var tbody = document.getElementById("table");

    var content = ``;
    let count = 1;
    value.forEach(element => {
      content += '<tr>'
      content += `
            <td> ${count}</td>
            <td> ${element.fname} </td>
            <td> ${element.lname} </td>
            <td> ${element.gender} </td>
            <td> ${element.email} </td>
            <td> ${element.mobile} </td>
            <td> ${element.enrollment} </td>
            <td> ${element.qualification} </td>
            <td> ${element.city} </td>
            <td> ${element.college} </td>
            <td> ${element.birthdate} </td>
            <td> ${element.createdate} </td>`;

      content += '</tr>'
      count++;
    });


    tbody.innerHTML = content;

  }

  function convertUTCTime(time) {
  let userTime = moment.utc(time).local().format("YYYY-MM-DD h:mm:ss A")
  return userTime;                                    
