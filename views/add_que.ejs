<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>add Que</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script>
        let optionflag = 4;
        function addop() {
            const option = document.getElementById("newoptions");
            const options_content =
                ` <div class="form-check mb-2" id="option${optionflag}">
                    <input class="form-check-input" type="radio" name="optionid" value="${optionflag}">
                    <input class="form-control form-control-sm" type="text" placeholder="options" name="option">
                </div>`;
            if (optionflag < 7) {
                // const option = document.getElementById('option' + i);
                // const clone = option.cloneNode(true);
                // i++;
                // clone.id = `option${i}`;
                // document.getElementById('optiondiv').appendChild(clone);
                const div = document.createElement("div");
                div.innerHTML = options_content;
                option.appendChild(div);
                optionflag++
            }
        }
    </script>
</head>

<body>
    <div class="container mt-5">
        <form method="POST" action="/que/add">
            <div class="form-group mb-4">
                <label for="Question">Enter Question</label>
                <textarea class="form-control" id="Question" name="Question" rows="2"></textarea>
            </div>
            <div id="optiondiv">
                <div class="form-check mb-2" id="option0">
                    <input class="form-check-input" type="radio" name="optionid" value="0">
                    <input class="form-control form-control-sm" type="text" placeholder="options" name="option">
                </div>
                <div class="form-check mb-2" id="option1">
                    <input class="form-check-input" type="radio" name="optionid" value="1">
                    <input class="form-control form-control-sm" type="text" placeholder="options" name="option">
                </div>
                <div class="form-check mb-2" id="option2">
                    <input class="form-check-input" type="radio" name="optionid" value="2">
                    <input class="form-control form-control-sm" type="text" placeholder="options" name="option">
                </div>
                <div class="form-check mb-2" id="option3">
                    <input class="form-check-input" type="radio" name="optionid" value="3">
                    <input class="form-control form-control-sm" type="text" placeholder="options" name="option">
                </div>
            </div>
            <div id="newoptions">
                
            </div>
            <div class="form-check mb-2">
                <p onclick="addop()" class="btn btn-primary">Add Options</p>
            </div>
            <div class="form-group mb-3">
                <label for="exampleFormControlTextarea1">Categories: </label>
                <select class="form-select form-select-sm" name="categories_id">
                    <% for (let index=0; index < queCategories.length; index++) {%>
                        <option value="<%=queCategories[index].category_id%>">
                            <%=queCategories[index].category_name%>
                        </option>
                        <% } %>
                </select>
            </div>
            <input type="submit" value="Add Question" class="btn btn-primary">
        </form>
    </div>
</body>

</html>